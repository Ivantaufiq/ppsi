<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KonfirmasiPembayaran.KonfirmasiLele">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:tint="@color/putih"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Pembayaran"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"/>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="Kuantitas"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:text="2"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="lot"
                android:gravity="center_vertical"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="Jumlah Pembayaran"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rp 200.000"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/CardView.Light"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:onClick="konfir1"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:id="@+id/name"
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textSize="15dp"
                            android:textColor="@color/putih"
                            android:text="Pilih Metode Pembayaran" />

                        <Button
                            android:id="@+id/arrowBtn"
                            android:onClick="konfir1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="30dp"
                            android:backgroundTint="@color/putih"
                            android:background="@drawable/ic_keyboard_arrow_right_blue_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expandableView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingBottom="12dp"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:text="Transfer Bank"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp" />
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="bankbca"
                                android:src="@drawable/bankbca"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:onClick="bankbri"
                                android:src="@drawable/bankbri"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="bankbni"
                                android:src="@drawable/bankbni"/>
                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:onClick="bankmandiri"
                                android:src="@drawable/bankmandiri"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Bayar di Counter"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp" />
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_marginTop="2dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="7dp"
                                android:onClick="indomaret"
                                android:src="@drawable/indomaret" />

                            <ImageView
                                android:onClick="alfamart"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="120dp"
                                android:layout_height="70dp"
                                android:src="@drawable/alfamart"/>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>