<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KonfirmasiPembayaran.KonfirmasiNila">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:tint="@color/putih"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Pembayaran"
            android:textColor="@color/putih"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="Kuantitas"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="19dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:text="lot"
                        android:gravity="center_vertical"
                        android:textSize="15dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:text="Jumlah Pembayaran"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rp 100.000"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:background="@drawable/linearshape"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resitext4"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/noresi"
                    android:textSize="22dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Pembayaran"
                    android:textAlignment="center"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 100.000"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Rekening"
                    android:layout_marginTop="20dp"/>
                <EditText
                    android:id="@+id/namarek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Rekening"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/norek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Bank"
                    android:layout_marginTop="15dp"/>
                <EditText
                    android:id="@+id/bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Bukti Transfer"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/gantifoto"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="11dp"
                    android:text="Pilih Gambar"
                    android:textAllCaps="false"
                    android:textColor="@color/putih"
                    android:background="@drawable/round2"/>

                <Button
                    android:id="@+id/kirim"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="200dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="11dp"
                    android:text="Kirim"
                    android:textAllCaps="false"
                    android:textColor="@color/putih"
                    android:background="@drawable/round2"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/image_view"
                android:layout_width="390dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>