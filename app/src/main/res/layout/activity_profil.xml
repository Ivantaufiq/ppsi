<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/colorPrimary"
    tools:context=".Home.ProfilActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/textinvuyaputih" />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:background="@color/putih"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profil"
        android:textColor="@color/putih"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="7dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="pindahdatadiri">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:src="@drawable/ic_person_blue_24dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Data Diri"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rightarrowblue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="7dp"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:onClick="pindahinformasiakun">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="37dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_lock_open_blue_24dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Informasi Akun"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/rightarrowblue" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentang"
        android:textColor="@color/putih"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="7dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:onClick="pindahsyarat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_indeterminate_check_box_black_24dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Syarat dan Ketentuan"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rightarrowblue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:onClick="pindahfaq">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_forum_black_24dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="FAQ"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rightarrowblue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:onClick="pindahjadimitra">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="2dp"
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_contact_phone_blue_24dp"/>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Jadi Mitra"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rightarrowblue"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:onClick="pindahhubungikami">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="37dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_store_mall_directory_blue_24dp" />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="Hubungi Kami"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rightarrowblue" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/round"
            android:text="@string/keluar"
            android:textSize="17dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"/>
    </LinearLayout>


</LinearLayout>